<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fav_layout_pole"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/frame_list_favorites"
              android:padding="@dimen/edit_list_fav_padding"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/edit_hint_padding"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/itemTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/itemFromToLang"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/edit_hint_padding"
        android:gravity="center|right"/>
</LinearLayout>